{
    "files.exclude": {
        ".venv": true,
        "**/__pycache__": true,
        "rango/tests*": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },

    "djlint.useVenv": false,
    "[django-html]": {
        "editor.defaultFormatter": "monosans.djlint",
        "editor.formatOnSave": true
    }
}